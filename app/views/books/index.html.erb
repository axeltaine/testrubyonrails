
<h1>Liste des livres</h1>
<br>
<h2><%= Book.count %> Livres au total</h2>
<br>
<div class="container text-center">
 <div class="row">
  <% @books.each do |book| %>
    <p>
      <a href="/books/<%= book.id %>">
        
          <%= book.title %><br>
        <%= image_tag("/assets/rubylang.png",  alt: "like", class: "like_image_for_index") %>
      </a>
    </p>
  <% end %>
  
 </div>
 <%= render "books/form" %>
</div>
