<h1><%= @book.title %></h1>
<div class="container">
    <%= form_tag "/books/#{@book.id}", method: "patch" do %>
    <input type="text" name="title" value="<%= @book.title %>" />
    <%= @book.errors[:title].first %>
    <input class="btn btn-primary" type="submit" value="Modifier le livre" />
    <% end %>
    <%= form_tag "/books/#{@book.id}", method: "delete" do %>
    <input class="btn btn-primary" type="submit" value="Supprimer le livre" />
    <% end %>
</div>
